<section class="carousel">
        <ul id="slides">
            {% set slides = ['slideOne', 'slideTwo', 'slideThree'] %}
            {% for index in 0..2 %}
                <li><img src="{{ attribute(event, slides[index]) ?: 'http://lorempixel.com/g/1500/800/business/' ~ (index + 1) }}" alt="image">
                    <div class="content_slide">
                        <div class="container">
                            <div class="wrapper_text">
                                <p class="title_slide">{{ event.title }}</p>
                                <p class="text_slide">{{ event.briefDescription }}</p>
                            </div>
                            <a href="#" class="btn_blue">{{ 'Registration'|trans }}</a>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
</section>

<script type="text/javascript">

    $(document).ready(function(){
        $('#slides').slick({
            dots: true,
            infinite: true,
            speed: 600,
            slidesToShow: 1,
            autoplay: true,
            autoplaySpeed: 3000,
            adaptiveHeight: true
        });
    });

</script>