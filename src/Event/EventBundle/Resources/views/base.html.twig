<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome to the Eventator!{% endblock %}</title>

        <link href="{{ asset('bundles/eventevent/css/libs/FontAwesome/css/font-awesome.min.css') }}" media="screen" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/eventevent/css/bootstrap.css') }}" media="screen" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/eventevent/css/bootstrap-glyphicons.css') }}" media="screen" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/eventevent/css/carousel.css') }}" media="screen" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/eventevent/css/style.css') }}" media="screen" rel="stylesheet" type="text/css">

        {% block stylesheets %}{% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
        <script>window.jQuery || document.write("<script src=\"{{ asset('bundles/eventevent/js/jquery-1.10.1.min.js') }}\"><\/script>")</script>
    </head>
    <body data-spy="scroll" data-target="#navbar">
        {% block body %}
        {% endblock %}

        <script type="text/javascript">
            function checkCaptcha(first, last, result, errorClass) {
                $('.' + errorClass).hide();

                var sum = first * 1 + last * 1,
                    error = '{{ "Please fill correct calculation result"|trans }}';

                if (sum != result) {
                    $('.' + errorClass).html(error).show();

                    return false;
                }

                return true;
            }
        </script>

        {% block javascripts %}
            <script src="{{ asset('bundles/eventevent/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('bundles/eventevent/js/holder.js') }}"></script>
        {% endblock %}
    </body>
</html>
