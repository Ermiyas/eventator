<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome to the Admin Panel!{% endblock %}</title>

        {# @todo: switch backend to the bootstrap v3 #}
        <link href="{{ asset('bundles/eventevent/css/bootstrap.min.css') }}" media="screen" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/eventevent/css/bootstrap-responsive.min.css') }}" media="screen" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/eventevent/css/style.css') }}" media="screen" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/eventevent/css/datetimepicker.css') }}" media="screen" rel="stylesheet" type="text/css">

        {% block data_tables_css %}
            <link href="{{ asset('bundles/eventevent/css/dt.bootstrap.css') }}" media="screen" rel="stylesheet" type="text/css">
        {% endblock %}

        {% block stylesheets %}{% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
        {% endblock %}

        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
            <script>window.jQuery || document.write("<script src=\"{{ asset('bundles/eventevent/js/jquery-1.10.1.min.js') }}\"><\/script>")</script>
            <script src="{{ asset('bundles/eventevent/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('bundles/eventevent/js/holder.js') }}"></script>
            <script src="{{ asset('bundles/eventevent/js/bootstrap-datetimepicker.min.js') }}"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        {% endblock %}

        {% block data_tables_js %}
            <script src="{{ asset('bundles/eventevent/js/jquery.dataTables.min.js') }}"></script>
            <script src="{{ asset('bundles/eventevent/js/dt.bootstrap.js') }}"></script>
        {% endblock %}
    </body>
</html>
