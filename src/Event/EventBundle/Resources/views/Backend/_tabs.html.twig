<ul class="nav nav-tabs" id="localesTab">
    <li class="active"><a data-toggle="tab" href="#{{ app.request.locale }}">{{ app.request.locale }}</a></li>

    {% if locales|length > 0 %}
        {% for title in locales %}
            <li><a data-toggle="tab" href="#{{ title }}">{{ title }}</a></li>
        {% endfor %}
    {% endif %}
</ul>
